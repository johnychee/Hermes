@model TestWebApp.Models.Region
@{
    ViewBag.Title = "Create New Region";
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">New Region Detail</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                @using (@Html.BeginForm("Create", "Region", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label for="name_" class="col-md-3 control-label ui-sortable">Name:</label>
                        <div class="col-md-9 ui-sortable">
                            @Html.TextBoxFor(model => model.name_, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.name_, "", new { @class="text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="RT_minutes_" class="col-md-3 control-label ui-sortable">Response time (In minutes):</label>
                        <div class="col-md-9 ui-sortable">
                            @Html.TextBoxFor(model => model.RT_minutes_, new { @type = "number", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RT_minutes_, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="FT_minutes_" class="col-md-3 control-label ui-sortable">Fix time (In minutes):</label>
                        <div class="col-md-9 ui-sortable">
                            @Html.TextBoxFor(model => model.FT_minutes_, new { @type = "number", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FT_minutes_, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="timeZoneId" class="col-md-3 control-label ui-sortable">Utc time shift:</label>
                        <div class="col-md-9 ui-sortable">
                            @Html.DropDownListFor(model => model.timeZoneId, TestWebApp.Models.Region.getTimeZones(), new { @class= "form-control"})
                            @Html.ValidationMessageFor(model => model.UTCtimeShift_, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="level" class="col-md-3 control-label ui-sortable">Actions:</label>
                        <div class="col-md-9 ui-sortable">
                            <button class="btn btn-success">Create Region</button>
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-6">


            </div>
        </div>
    </div>
</div>
