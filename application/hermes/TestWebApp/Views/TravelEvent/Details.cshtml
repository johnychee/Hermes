@using TestWebApp.Models;
@using System.Collections;
@model TravelEvent
@{
    ViewBag.Title = "Detail zájezdu";
    HermesDBEntities hDesk = new HermesDBEntities();
    User current_user = hDesk.Users.SingleOrDefault(u => u.id == WebSecurity.CurrentUserId);
}

<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">Details</h4>
    </div>
    <div class="panel-body">
        @using (@Html.BeginForm("Edit" + @Model.Id, "TravelEvent", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                <label for="name" class="col-md-1 control-label ui-sortable">Jméno:</label>
                <div class="col-md-2 ui-sortable">
                    @Html.TextBox("Name", Model.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-1 control-label ui-sortable">Popis:</label>
                <div class="col-md-2 ui-sortable">
                    @Html.TextArea("Description", Model.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-1 control-label ui-sortable">Kapacita:</label>
                <div class="col-md-2 ui-sortable">
                    @Html.TextBox("Capacity", Model.Capacity, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-1 control-label ui-sortable">Cena jednotlivce:</label>
                <div class="col-md-2 ui-sortable">
                    @Html.TextBox("Price", Model.Price, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-md-1 control-label ui-sortable">Actions:</label>
                <div class="col-md-4 ui-sortable">

                    @Html.ActionLink("Uprav zájezd", "Edit", new { @id = Model.Id }, new { @class = "btn btn-primary" })<span></span>
                    @Html.ActionLink("Smaž zájezd", "Delete", new { @id = Model.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Jste si jistý?');" })
                    @Html.ActionLink("Rezervuj", "Create", "TravelContract", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</div>
