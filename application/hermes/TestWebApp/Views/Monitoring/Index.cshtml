<meta http-equiv="content-type" content="text/html; charset=+" />@using TestWebApp.Models
@using PagedList.Mvc;
@using PagedList;
@{
    HermesDBEntities hDesk = new HermesDBEntities();
    ViewBag.Title = "Reporty";
}
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">Reporty</h4>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table">
                <tr>
                    <th>Evidenční číslo reportu:</th>
                    <th>Jméno skupiny</th>
                    <th>Vygenerován dne</th>
                    <th>Od</th>
                    <th>Do</th>
                    <th>Příjem pobočky</th>
                </tr>
                @foreach (Report report in ViewBag.Reports)
                {
                    <tr>
                        <td>@Html.ActionLink(@String.Format("RP-{0}",report.Id), "Details/" + @report.Id)</td>
                        <td>@report.Group.name</td>
                        <td>@report.GeneratedAt</td>
                        <td>@report.PeriodFrom</td>
                        <td>@report.PeriodTo</td>
                        <td>@report.AmountOfMoneyForPeriod</td>
                    </tr>
                }
            </table>

        </div>
    </div>
</div>
